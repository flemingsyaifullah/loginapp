{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".", 
    "paths": {
      "@shared/*": ["../../../packages/shared/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
